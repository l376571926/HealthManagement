<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".PedometerActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_pedometer"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="今天步数"
            android:textColor="@color/secondary_text" />

        <TextView
            android:id="@+id/today_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/primary_text"
            android:textSize="35sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/today_cost_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/today_cost_time_place_holder"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/today_cost_calorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/today_cost_calorie_place_holder"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/week_steps_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/week_steps_amount_place_holder"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/week_average_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/week_average_steps_place_holder"
        android:textColor="@color/secondary_text" />

</LinearLayout>